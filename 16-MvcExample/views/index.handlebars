<h1>burgers!</h1>

<h2>burgers that are not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> eaten!<br>
    <input type="radio" name="eaten" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
